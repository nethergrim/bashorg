<resources>

    <style name="My.Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="myColorBackground">@color/background</item>
        <item name="myColorWindowBackground">@color/window_background</item>
        <item name="android:windowBackground">?attr/myColorWindowBackground</item>
        <item name="myColorActionBar">@color/main_color</item>
        <item name="myColorAccent">@color/accent</item>
        <item name="myColorPrimaryColor">@color/primary_text</item>
        <item name="myColorSecondaryColor">@color/secondary_text</item>
        <item name="colorPrimaryDark">?attr/myColorActionBar</item>
        <item name="colorAccent">?attr/myColorAccent</item>
    </style>

    <style name="My.Theme.Dark" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="myColorBackground">@color/dark_background</item>
        <item name="myColorWindowBackground">@color/dark_window_background</item>
        <item name="android:windowBackground">?attr/myColorWindowBackground</item>
        <item name="myColorActionBar">@color/dark_main_color</item>
        <item name="myColorAccent">@color/dark_accent</item>
        <item name="myColorPrimaryColor">@color/dark_primary_text</item>
        <item name="myColorSecondaryColor">@color/dark_secondary_text</item>
        <item name="colorPrimaryDark">?attr/myColorActionBar</item>
        <item name="colorAccent">?attr/myColorAccent</item>
    </style>

    <style name="My.Theme.Black" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="myColorBackground">@android:color/black</item>
        <item name="myColorWindowBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="myColorActionBar">@android:color/black</item>
        <item name="myColorAccent">@color/dark_accent</item>
        <item name="myColorPrimaryColor">@color/dark_primary_text</item>
        <item name="myColorSecondaryColor">@color/dark_secondary_text</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

</resources>
